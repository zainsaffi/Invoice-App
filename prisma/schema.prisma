generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Invoice {
  id            String    @id @default(uuid())
  invoiceNumber String    @unique

  // Client details
  clientName    String
  clientEmail   String
  clientAddress String?

  // Invoice details
  description   String
  items         InvoiceItem[]
  subtotal      Float
  tax           Float     @default(0)
  total         Float

  // Status tracking
  status        String    @default("draft") // draft, sent, paid, cancelled

  // Email tracking
  emailSentAt   DateTime?
  emailSentTo   String?

  // Payment tracking
  paidAt        DateTime?
  paymentMethod String?

  // Receipts
  receipts      Receipt[]

  // Timestamps
  dueDate       DateTime?
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
}

model InvoiceItem {
  id          String  @id @default(uuid())
  description String
  quantity    Int
  unitPrice   Float
  total       Float

  invoice     Invoice @relation(fields: [invoiceId], references: [id], onDelete: Cascade)
  invoiceId   String
}

model Receipt {
  id        String   @id @default(uuid())
  filename  String
  filepath  String
  mimeType  String
  size      Int

  invoice   Invoice  @relation(fields: [invoiceId], references: [id], onDelete: Cascade)
  invoiceId String

  createdAt DateTime @default(now())
}
